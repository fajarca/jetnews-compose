<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.fajarca.project.jetnews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.JetNewsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetNews.NoActionBar">
        <activity
            android:name=".presentation.search_result.SearchResultActivity"
            android:exported="true"
            android:label="@string/title_activity_search_result"
            android:theme="@style/Theme.JetNews.NoActionBar.NoActionBar" />
        <activity
            android:name=".presentation.search.SearchNewsActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.detail.NewsDetailActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.list.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>